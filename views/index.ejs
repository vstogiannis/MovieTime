<%- include("partials/header.ejs"); %>

    <div class="container-fluid cont">
      <div class="row">
    <%    for (var i = 0; i < movies.length; i++){ %>
          <div class="col-6 message">
            <h1>Next Movie: "<%= movies[i].title %>"</h1>
            <h2><span>From: <%= movies[i].date1 %> Until: <%= movies[i].date2 %></span></h2>
            <p><%= movies[i].description %></p><br>
            <h2>Make your reservations now !!!</h2>
            <a target="_blank" rel="noopener noreferrer" href="/reservation"><button class="btn btn-primary btn-lg btn-res" name="button">Reservations</button></a>
          </div>
    <%    } %>

        <div class="col-6 container-image">
          <img class="image" src="/images/movietime.jpg">
        </div>
      </div>
    </div>
</section>
    <%    for (var i = 0; i < movies.length; i++){ %>
    <div id="my-carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="<%= movies[i].image1 %>" class="d-block w-100 car-img" alt="slide 0">
        </div>
        <div class="carousel-item">
          <img src="<%= movies[i].image2 %>" class="d-block w-100 car-img" alt="slide 1">
        </div>
        <div class="carousel-item">
          <img src="<%= movies[i].image3 %>" class="d-block w-100 car-img" alt="slide 2">
        </div>
      </div>
      <a class="carousel-control-prev" href="#my-carousel" data-slide="prev" >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#my-carousel" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
<%    } %>
<%- include("partials/footer.ejs"); %>
